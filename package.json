{
  "name": "english-vocab-slack-bot",
  "version": "1.0.0",
  "description": "Slack bot for English vocabulary learning with adaptive testing",
  "main": "dist/functions/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "gcp-build": "echo 'TypeScript already compiled locally'",
    "dev": "node -r dotenv/config node_modules/.bin/functions-framework --target=slackEvents --source=dist/functions",
    "deploy": "npm run build && ./deploy.sh",
    "test": "jest"
  },
  "keywords": [
    "slack",
    "bot",
    "vocabulary",
    "learning",
    "notion",
    "cloud-functions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@notionhq/client": "^2.2.15",
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^6.12.0",
    "@supabase/supabase-js": "^2.39.7",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
